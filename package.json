{
  "name": "device-demonstrator",
  "homepage": "https://signed.github.io/device-demonstrator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fakes/media-devices": "0.1.0",
    "@storybook/addon-knobs": "6.1.8",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.10",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "libphonenumber-js": "1.9.4",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "simple-peer": "9.9.3",
    "typescript": "4.1.2",
    "use-callback-ref": "1.2.4",
    "uuid": "8.3.1"
  },
  "scripts": {
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint --ext js,ts,tsx src",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen --watchAll=false",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "no-unused-vars": "off",
          "no-mixed-operators": "off",
          "import/no-anonymous-default-export": "off",
          "@typescript-eslint/no-unused-vars": [
            "warn",
            {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
            }
          ]
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "chrome >= 79",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.1.8",
    "@storybook/addon-links": "6.1.8",
    "@storybook/addons": "6.1.8",
    "@storybook/preset-create-react-app": "3.1.5",
    "@storybook/react": "6.1.8",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@types/simple-peer": "9.6.1",
    "@types/uuid": "8.3.0",
    "gh-pages": "3.1.0",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "jest-extended": "0.11.5"
  },
  "volta": {
    "node": "14.8.0",
    "yarn": "1.22.4"
  }
}
